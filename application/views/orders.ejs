<%- contentFor('body') %>
	<div class="content-container orders">
		<div class="screen-holder">
			<div class="row orders-screen">
	        
	    	</div>
	    	<div class="row order-details-screen">
	    		<div class="order-wrapper">
		    		<div class="col-12 col-md-4 display-section order-section">
			     		<div class="row order-products-holder">
			     			
			     		</div>
			     		<div class="row orders-keypad">
		     				<div class="col-3">
		     					<div class="key num1">1</div>
		     					<div class="key num4">4</div>
		     					<div class="key num7">7</div>
		     				</div>
		     				<div class="col-3">
		     					<div class="key num2">2</div>
		     					<div class="key num5">5</div>
		     					<div class="key num8">8</div>
		     					<div class="key num0">0</div>
		     				</div>
		     				<div class="col-3">
		     					<div class="key num3">3</div>
		     					<div class="key num6">6</div>
		     					<div class="key num9">9</div>
		     					<div class="key num.">.</div>
		     				</div>
		     				<div class="col-3">
		     					<div class="key qty">QTY</div>
		     					<div class="key price">Price</div>
		     					<div class="key delete">&lt;-</div>
		     				</div>
			     		</div>
			    	</div>

		    	<div class="col-12 col-md-8 display-section products-section">
		    		<div class="row">
		    			<% for(var i=0; i < products.length; i++) {%>
		    				<div class="col-4 col-sm-4 col-md-3 col-lg-2 o-hidden h-100  product-card">
		    					<div class="product-card-inner">
		    						<span class="badge"><%= products[i].price %></span>
						            <div class="product-card-body clearfix">
						              	<% if (products[i].image !== false) { %> 
				                			<img class="product-card-image" src="data:image/png;base64, <%= products[i].image %>">
				                		<% } else { %>
				                			<img class="product-card-image" src="/public/static/img/no-image.png">
				                	 	<% } %>
						            </div>
						            <div class="product-card-footer text-white bg-primary clearfix small z-1" href="#">
						              	<span class="float-left"><%= products[i].name %></span>
						            </div>
					            </div>
					        </div>
		            	<% } %>  
  					</div>
		    	</div>
		    	</div>
	    	</div>
		</div>
	</div>



