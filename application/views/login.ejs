<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Qticket login</title>

    <!-- Project icon -->
    <link href="public/static/images/nodejs.png" rel="icon">

    <!-- Bootstrap Core CSS -->
    <link href="public/static/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="public/static/css/sb-admin.css" rel="stylesheet">
    <link href="public/static/css/datatables.css" rel="stylesheet">
    <link href="public/static/css/screen.css" rel="stylesheet">
    <link href="public/static/css/custom.css" rel="stylesheet">

    <!-- Morris Charts CSS -->
    <link href="public/static/css/plugins/morris.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="public/static/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
</head>

<body>
    <% if(locals.errorMsg !== undefined){ %>
        <div class="callout"><%= errorMsg %></div>
    <% } %>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Please Sign In</h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" method="POST" action="/session/login">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Username" name="username" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Remember Me
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <input type="submit" value="Login" class="btn btn-lg btn-success btn-block"/>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>