<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="">
        <meta name="author" content="">

        <title><%= tabTitle %></title>

        <!-- Project icon -->
        <link href="public/static/images/nodejs.png" rel="icon">

        <!-- Bootstrap Core CSS -->
        <link href="public/static/css/bootstrap.min.css" rel="stylesheet">

        <!-- Custom CSS -->
        <link href="public/static/css/sb-admin.css" rel="stylesheet">
        <link href="public/static/css/datatables.css" rel="stylesheet">
        <link href="public/static/css/screen.css" rel="stylesheet">
        <link href="public/static/css/custom.css" rel="stylesheet">

        <!-- Morris Charts CSS -->
        <link href="public/static/css/plugins/morris.css" rel="stylesheet">

        <!-- Custom Fonts -->
        <link href="public/static/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    </head>

    <body>
        <!-- #wrapper -->
        <div id="wrapper">

            <!-- Navigation -->
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">

                <!-- Brand and toggle get grouped for better mobile display -->
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Qticket <sub>beta</sub></a>
                </div>

                <!-- Top Menu Items -->
                <ul class="nav navbar-right top-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true"><i class="fa fa-user"></i>  <%= session.user.displayname %> <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="/session/logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
                <div class="collapse navbar-collapse navbar-ex1-collapse">
                    <ul class="nav navbar-nav side-nav">
                        <% if (activeTab === 1) { %> <li class="active"> <% } else { %> <li> <% } %>
                            <a href="/"><i class="fa fa-fw fa-shopping-cart"></i> Orders</a>
                        </li>
                        <% if (session.user.role === 'admnistrativo' || session.user.role === 'super') { %> 
                            <% if (activeTab === 2) { %> <li class="active"> <% } else { %> <li> <% } %>
                                <a href="/search"><i class="fa fa-fw fa-search"></i> Search</a>
                            </li>
                            <% if (activeTab === 3) { %> <li class="active"> <% } else { %> <li> <% } %>
                                <a href="/reports"><i class="fa fa-fw fa-bar-chart"></i> Reports</a>
                            </li>
                        <% } %>
                        <% if (session.user.role === 'super') { %> 
                            <% if (activeTab === 4) { %> <li class="active"> <% } else { %> <li> <% } %>
                                <a href="/settings"><i class="fa fa-fw fa-gear"></i> Settings</a>
                            </li>
                        <% } %>
                    </ul>
                </div>
                <!-- /.navbar-collapse -->
            </nav>

            <!-- #page-wrapper -->
            <div id="page-wrapper">

                <!-- .container-fluid -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <div class="row">
                        <div class="col-lg-12">
                            <h1 class="page-header">
                                <%= mainTitle %> <small><%= subTitle %></small>
                            </h1>
                            <%- breadcrumb -%>
                            
                        </div>
                    </div>
                    <!-- ./Page Heading -->

                    <!-- Page Content -->
                        <%-body -%>
                    <!-- /Page Content -->

                </div>
                <!-- /.container-fluid -->
            </div>
            <!-- /#page-wrapper -->
        </div>
        <!-- /#wrapper -->

        <!-- Data -->
        <% if(locals.token !== undefined){ %>
            <script id="data" type="text/javascript">
                <% for(var i=0; i < token.length; i++) {%>
                    window.sessionStorage.setItem(token[i].key, token[i].value);
                <% } %>
                console.log(token);
            </script>
        <% } %>
        <!-- ./Data -->

        <!-- Socket IO -->
        <script src="public/static/js/vendor/socket.io.js"></script>

        <!-- jQuery -->
        <script src="public/static/js/vendor/jquery.js"></script>
        
        <!-- JQuery Data tables -->
        <script src="public/static/js/vendor/datatables.js"></script>

        <!-- Bootstrap Core JavaScript -->
        <script src="public/static/js/vendor/bootstrap.min.js"></script>

         <!-- Bootstrap Modal -->
        <script src="public/static/js/vendor/bootstrap-modal.js"></script>

        <!-- Custom JS files -->
        <% if(locals.jsfiles !== undefined){ %>
            <% for(var i=0; i < jsfiles.length; i++) {%>
                <script src="public/static/js/<%= jsfiles[i] %>"></script>
            <% } %>
        <% } %>

    </body>
</html>